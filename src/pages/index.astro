---
import Base from "@/layouts/Base.astro";
import { css } from "@/styled-system/css";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const logos = await getCollection("logos");

// eslint-disable-next-line @typescript-eslint/no-explicit-any
const images: { [index: string]: any } = {};

await Astro.glob("/src/assets/logos/*.png").then((files) => {
	files.forEach((file) => {
		const name = file.default.src.split(".")[0].split("/").pop();
		images[name] = file.default;
	});
});
---

<Base>
	<div
		class={css`
			display: grid;
			grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
			align-items: center;
			row-gap: 40px;
			column-gap: 50px;

			@media (max-width: 900px) {
				grid-template-columns: 1fr 1fr 1fr 1fr;
				row-gap: 50px;
				column-gap: 20px;
			}

			@media (max-width: 700px) {
				grid-template-columns: 1fr 1fr 1fr;
				row-gap: 30px;
				column-gap: 20px;
			}

			@media (max-width: 450px) {
				grid-template-columns: 1fr 1fr;
				row-gap: 30px;
				column-gap: 20px;
			}
		`}
	>
		{
			logos
				.sort((a, b) => {
					return b.slug.toString().toLowerCase() > a.slug.toString().toLowerCase() ? -1 : 1;
				})
				.map((logo) => {
					return (
						<div
							class={css`
								position: relative;
								padding: 10px;
							`}
						>
							<div
								class={css`
									max-width: 150px;
									width: 100%;
									user-select: none;
									display: flex;
									gap: 10px;
									align-items: center;
								`}
							>
								<Image
									class={css`
										aspect-ratio: 1/1;
										object-fit: contain;
									`}
									src={images[logo.slug]}
									alt={`${logo.data.name}`}
									width={30}
									height={30}
									transition:name={`${logo.slug}-image`}
								/>
								<h2
									class={css`
										text-align: center;
										display: flex;
										flex-direction: column;
										align-items: center;
										gap: 5px;
									`}
								>
									<div
										class={css`
											font-size: 15px;

											@media (max-width: 600px) {
												font-size: 15px;
											}
										`}
									>
										{logo.data.name}
									</div>
								</h2>
							</div>
							<a
								href={`/${logo.slug}`}
								class={css`
									position: absolute;
									top: 0;
									left: 0;
									width: 100%;
									height: 100%;
									display: block;
									border-radius: 5px;

									&:hover {
										border: 1px solid gray;
									}
								`}
							/>
						</div>
					);
				})
		}
	</div>
</Base>
