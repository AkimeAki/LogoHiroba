---
import { css } from "@/styled-system/css";

interface Props {
	file: string;
	name: string;
	href: string;
}

const { file, name, href } = Astro.props;
---

<a
	href={href}
	target="_blank"
	class={css`
		display: block;
		width: 40px;
		aspect-ratio: 1/1;
		font-size: 0;
		border-radius: 50%;
		overflow: hidden;
	`}
>
	<img
		src={`/icon/circle/${file}.png`}
		alt={name}
		class={css`
			width: 100%;
			height: 100%;
		`}
	/>
</a>
